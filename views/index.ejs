<%- include ("partials/head") -%>

<div class="container">
  <h1>Dead simple URL shortener</h1>
  <h2>Keep track of your generated links</h2>

  <form method="POST" action="/" class="shorten-form">
    <input
      name="longUrl"
      type="text"
      class="search-txt"
      placeholder="Your link here..."
      required
    />
    <button type="submit" class="search-btn">
      <i class="fas fa-arrow fa-arrow-right"></i>
    </button>
  </form>
</div>

