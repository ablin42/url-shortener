{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["**/*", "src/*", "src/app.ts"],
	"exclude": [
		"node_modules",
	]
}